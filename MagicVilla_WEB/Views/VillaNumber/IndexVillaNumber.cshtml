@model IEnumerable<MagicVilla_WEB.Models.VillaNumber.Dto.VillaNumberDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="CreateVilla" class="btn btn-outline-primary"><i class="bio bi-plus-square-fill"></i>Create new Villa</a>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                No
            </th>
            <th>
                VillaID
            </th>
            <th>
                Special Details
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.No</td>
                <td>@item.VillaID</td>
                <td>@item.SpecialDetails</td>
                <td>
                    <a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@item.No" class="btn btn-success">Update</a>
                    <a asp-controller="Villa" asp-action="DeleteVilla" asp-route-villaId="@item.No" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>