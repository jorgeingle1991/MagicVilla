@model IEnumerable<MagicVilla_WEB.Models.Villa.Dto.VillaDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller = "Villa" asp-action="CreateVilla" class="btn btn-outline-primary"><i class="bio bi-plus-square-fill"></i>Create new Villa</a>
        </div>
    </div>
</div>

<table class="table">
<thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Occupancy
        </th>
        <th>
            Price
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
    @foreach(var item in Model){
        <tr>
            <td>@item.Name</td>
            <td>@item.Occupancy</td>
            <td>@((item.Rate).ToString("c"))</td>
                <td>
                <a asp-controller="Villa" asp-action="UpdateVilla" asp-route-villaId="@item.Id" class="btn btn-success">Update</a>
                <a asp-controller="Villa" asp-action="DeleteVilla" asp-route-villaId="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</tbody>
</table>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
